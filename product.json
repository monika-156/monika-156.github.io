}

.events .info {
  letter-spacing: 0.5px;
  margin-bottom: 6px;
}

.events .separator {
  width: 20%;
  height: 6px;
  background-color: #966fd6;
  margin-bottom: 16px;
}

.events .additional-info {
  border-top: 1px solid #bbb;
